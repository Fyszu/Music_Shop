@page "/"
@model MainModel
@{
    ViewData["Title"] = "Strona główna";
}

<html>
    <body>
        <h1>Sklep</h1>
        

        <form method = "post" asp-page-handler="SendOrder">
            <div>
                <label for="Imie">Imię</label>
                <input type="text" name="Imie" />
            </div>
            <div>
                <label for="Nazwisko">Nazwisko</label>
                <input type="text" name="Nazwisko" />
            </div>
            <div>
                <label for="Email">Email</label>
                <input type="text" name="Email" />
            </div>
            <div>
                <label for="Telefon">Telefon</label>
                <input type="text" name="Telefon" />
            </div>
            <div>
                <label for="Ulica">Ulica</label>
                <input type="text" name="Ulica" />
            </div>
            <div>
                <label for="Kod">Kod pocztowy</label>
                <input type="text" name="Kod" />
            </div>
            <div>
                <label for="Miasto">Miasto</label>
                <input type="text" name="Miasto" />
            </div>
            <br /><br />
            <div>
                <label for="Produkt">Produkt</label>
                <select name="Produkt">
                    <option value="Album">Album</option>
                    <option value="Koszulka">Koszulka</option>
                </select>
            </div>
            <div>
                <label for="Ilosc">Ilość</label>
                <input type="range" name="Ilosc" min="1" max="20" value="1" oninput="this.nextElementSibling.value = this.value"/> <output>1</output>
            </div>
            <div>
                <input type="submit" value="Zakup" class="submit" />
            </div>
        </form>
    </body>
</html>